            $("#UlError").empty();
            for (var i = 0; i < message.length; i++) {
                if (message.split('<br>')[i] == undefined) {
                    return;
                    break;
                }
                var node = document.createElement("LI");
                var textnode = document.createTextNode(message.split('<br>')[i]);
                node.appendChild(textnode);
                document.getElementById("UlError").appendChild(node);
            }
            return;
        }
        else {
            $("#alert").hide();
        }

        $.ajax({
            type: "POST",
            url: "/Listing/GetItemInfo",
            data: '{Id: "' + $("#tbItemNo").val() + '" }',
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (response) {
                if (response.Msg == "Success") {
                    var SellerCity = response.SellerInfo.City;
                    var SellerCountryCode = response.SellerInfo.Country.Code;
                    var SellerZipPostal = response.SellerInfo.ZipPostal;
                    var BuyerPostalCode = $("#tbPostalCode").val();
                    var BuyerCity = $("#tbCityName").val();
                    var BuyerCountryCode = $("#ddlShipCountryList").children("option:selected").val();
                    var WeightUnit = "";
                    var Weight = 0;
                    var Height = 0;
                    var Length = 0;
                    var Width = 0;
                    var DimensionUnit = "";
                    for (var i = 0; i < response.ListingInfo.Properties.length; i++) {
                        switch (response.ListingInfo.Properties[i].Field.Name) {
                            case
                                "WeightUnit":
                                WeightUnit = response.ListingInfo.Properties[i].Value;
                                break;

                            case
                                "Weight":
                                Weight = parseFloat(response.ListingInfo.Properties[i].Value);
                                break;
                            case
                                "Height":
                                Height = parseFloat(response.ListingInfo.Properties[i].Value);
                                break;
                            case
                                "Length":
                                Length = parseFloat(response.ListingInfo.Properties[i].Value);
                                break;
                            case
                                "Width":
                                Width = parseFloat(response.ListingInfo.Properties[i].Value);
                                break;
                            case
                                "DimensionUnit":
                                DimensionUnit = response.ListingInfo.Properties[i].Value;
                                break;
                        }
                    }
                    GetQuoteFromDhl(BuyerCountryCode, BuyerPostalCode, BuyerCity, SellerCountryCode, SellerZipPostal, SellerCity, WeightUnit, Weight, Height, Length, Width, DimensionUnit);

                }
                else if (response.Msg == "failed")
                 {
                    $('#GripList').css('display', 'none');
                    $('#ErrorGripList').css('display', 'block');
                    $('#error').text("Please check Item Code , Something went wrong");
                    $('#AjaxLoader').hide();
                }

            },
        failure: function (response) {
            alert(response.Msg);
        },
        error: function (response) {
            alert(response.Msg);
        }
