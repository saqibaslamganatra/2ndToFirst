        function GetQuoteFromDhl(BuyerCountryCode, BuyerPostalCode, BuyerCity, SellerCountryCode, SellerZipPostal, SellerCity, WeightUnit, Weight, Height, Length, Width, DimensionUnit) {

            var settings = {
                "url": "https://courierservice.2nd-to-first.com/getquote.php",
            "method": "POST",
            "timeout": 0,
            "headers": {
                "Content-Type": "application/json"
            },
                "data": JSON.stringify({ "SellerCountryCode": SellerCountryCode, "SellerPostalcode": SellerZipPostal, "SellerCity": SellerCity, "PaymentCountryCode": SellerCountryCode, "Date": "@DateTime.Now.Date.ToString("yyyy-MM-dd")", "WeightUnit": WeightUnit, "DimensionUnit": DimensionUnit, "Height": Height, "Length": Length, "Width": Width, "Weight": Weight, "BuyerCountryCode": BuyerCountryCode, "BuyerPostalcode": BuyerPostalCode, "BuyerCity": BuyerCity}),
        };

        $.ajax(settings).done(function (response) {
            if (response['StandardRate']) {

                $('#GripList').css('display', 'block');
                $('#ErrorGripList').css('display', 'none');
                $('#service').text(response['StandardRate'][0]['Service']);
                $("#deliveryDate").text(response.DeliveryDate);
                $("#deliveryTime").text(response.DeliveryTime);
                $("#pickupDate").text(response.PickupDate);
                $("#totalTransitDays").text(response.TotalTransitDays);
                $('#currencyCode').text(response['StandardRate'][0]['CurrencyCode']);
                $('#weightCharge').text(response['StandardRate'][0]['WeightCharge']);
                $('#chargeValue').text(response['StandardRate'][0]['ChargeValue']);
